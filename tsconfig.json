{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "baseUrl": "./src",
        "checkJs": true,
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "plugins": [
            {
                "transform": "./src/fixture-transformer.transformer.ts",
                "import": "fixtureTransformer",
            }
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "files": true,
        "compiler": "ts-patch/compiler",
        "compilerOptions": {
            "plugins": [
                {
                    "transform": "./src/fixture-transformer.export.js"
                }
            ]
        }
    }
}
